@using Cinemanage.Models.Database
@using X.PagedList
@using X.PagedList.Mvc.Core
@using X.PagedList.Web.Common





@model IPagedList<MovieCollection>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


@if (Model.Count == 0)
{
    <p>No items found in this collection.</p>
}
else
{
    <ul>
        @foreach (var item in Model)
        {
            <li>
                <strong>@Model.TotalItemCount</strong>: @item.MovieCollectionsList.Count
            </li>
        }
    </ul>
}
