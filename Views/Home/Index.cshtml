@model Cinemanage.Models.ViewModels.LandingPageVM;

@{
    ViewData["Title"] = "Cinemanage";
}

<section class="header-wrapper" id="imageHeader">

    @{
        var rand = new Random();
        var imagePath = "";
        foreach (var randomMovie in Model.NowPlaying.results.OrderBy(x => rand.Next()).Take(1))
        {
            imagePath = randomMovie.backdrop_path;
        }
    }


    <img src="@imagePath" class="img-fluid w-100" />

    <div class="welcome-text">
        <h1>Welcome to Cine Manage.</h1>
        <h4>Search millions of movies, and CREATE your OWN COLLECTIONS!</h4>
    </div>
        <form role="search" asp-controller="Movies" asp-action="SearchIndex">
        <div class="input-group mb-3 centered">
            <input type="text" class="form-control border-0" placeholder="Search Movies" name="searchTerm" aria-label="Movie Name" aria-describedby="Search-Term">
            <button class="btn btn-success border-0" type="submit" id="searchButton">
                <i class="fas fa-search"></i>
            </button>
        </div>
        </form>  
</section>

<section id="upcoming" class="px-1 m-5">
    @*  ----------- UPCOMING --------------- *@
    <div class="row">
        <span>UPCOMING</span>
    </div>
    @* Display Upcoming Movies Carousel *@

    <div id="upcomingCarousel" class="carousel h-100">
        <div class="carousel-inner">
            @{
                var classText = "active";
                @foreach (var movie in Model.Upcoming.results.Take(15))
                {
                    <div class="carousel-item @classText">
                        <div class="card text-center border-0">
                            <a asp-action="Details" asp-controller="Movies" asp-route-id="@movie.id">
                                <img src="@movie.poster_path" class="img-fluid" alt="...">
                            </a>
                            <div class="card-body p-2">
                                <a asp-action="Details" asp-controller="Movies" asp-route-id="@movie.id">
                                    <p class="mt-2">@movie.title</p>
                                </a>
                            </div>
                        </div>
                    </div>
                    classText = "";
                }

            }
        </div>
        <button class="carousel-control-prev" type="button" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    <hr />
</section>

