<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/cf10439109.js" crossorigin="anonymous"></script>
    <title>@ViewData["Title"] - Cinemanage</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Oleo+Script&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Cinemanage.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar  navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow">
            <div class="container-fluid d-flex p-2">
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>

                        @if (User.IsInRole("Administrator"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Manage Collections
                                </a>

                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Collections" asp-action="Index">Collections</a></li>
                                    <li><a class="dropdown-item" asp-controller="Posts" asp-action="Create">Create Post</a></li>
                                    <li><a class="dropdown-item" asp-controller="Blogs" asp-action="Index">Blogs</a></li>
                                    <li><a class="dropdown-item" asp-controller="Posts" asp-action="Index">Posts</a></li>
                                </ul>

                            </li>
                        }


                    </ul>

                    <a asp-area="" asp-controller="Home" asp-action="Index" class="navLogo">
                        <img src="/img/Cinemanage-Logo.svg" class="img-fluid" width="120" />
                    </a>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid m-0 p-0">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-4">
        <div class="container">
            <div class="row d-flex align-items-center p-3">
                <div class="col d-flex ">
                  
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="mt-3">
                        <img src="~/img/Cinemanage-Footer.svg" class="img-fluid" width="150" />
                    </a>

                </div>
                <di class="col">
                    &copy; 2023 - Cinemanage - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>

                </di>
            </div>
        </div>
    </footer>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
